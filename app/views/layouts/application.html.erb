<!DOCTYPE html>
<html>
  <head>
    <title>BroadwayLove</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%# javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <body>
    <%if current_user %>
    <%=link_to "All Shows", shows_path %>
    <%=link_to "New Show", new_show_path %>
    <%=link_to "New Review", new_review_path %>
    <%=link_to "All Reviews", reviews_path %>
    <%=link_to "My Shows", user_shows_path(current_user) %>
    <%= button_to "Log Out", logout_path, method: :post %>
    <%else%>
      <%= link_to "Log In", login_path %>
      <%= link_to "Sign Up", signup_path %>
    <%end%>
    <%= yield %>
  </body>
</html>
