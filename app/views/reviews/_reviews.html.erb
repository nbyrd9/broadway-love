<%reviews.each do |r|%>
    <hr><h5> <i> <%=show_show_name(r, index)%> </i> </h5>  <%="Rating:"%>  <%=r.rating%> <br> <%="Location:"%> <%=r.location%> <br> <%="Comment:"%> <%=r.comment%> 
   <% if r.user_id == current_user.id %>
   <br>
      <%= link_to "Edit",  edit_review_path(r)%>
      <%=button_to("Delete", r, method: :delete) %>
   <%end%>
<%end%>





