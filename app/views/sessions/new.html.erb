<head>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<style>
body {
  margin: 0;
  padding: 0;
  background-color: #17a2b8;
  height: 100vh;
}
#login .container #login-row #login-column #login-box {
  margin-top: 120px;
  max-width: 600px;
  height: 320px;
  border: 1px solid #9C9C9C;
  background-color: #EAEAEA;
}
#login .container #login-row #login-column #login-box #login-form {
  padding: 20px;
}
#login .container #login-row #login-column #login-box #login-form #register-link {
  margin-top: -85px;
}
</head>
</style>


<!DOCTYPE html>
<html>



  <% @errors && @errors.each do |e| %>
    <li><%=e%></li>
  <%end%>




<%= form_for :user do |f|%>
<body>
   <div id="login">
        <h3 class="text-center text-white pt-5">Login to Broadway Love!</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="" method="post">
                            <br>
                            <br>
                            <div class="form-group">
                                <label <%=f.label "Username" %>  </label><br>
                                <%=f.text_field :username, class: "form-control" %>
                            </div>
                            <div class="form-group">
                                <label<%=f.label "Password"%> </label><br>
                               <%=f.password_field :password, class: "form-control"  %>
                            </div>
                            <div class="form-group">
                                
                                <input type="submit" name="submit" class="btn btn-info btn-md" value="Log In">
                            </div>
                            <div id="register-link" class="text-right">
                                <a href="/signup" class="text-info">Sign Up Here!</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>








 <%#f.label "Username" %>  

  <%#f.text_field :username%>

  <%#f.label "Password"%>
  <%#f.password_field :password %>

  <%#f.submit "Log In"%>
<%end%>



</body>
</html>
