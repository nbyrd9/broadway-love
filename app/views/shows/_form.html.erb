<%=form_for @show do |f|%>
    <%=f.label("Show Name:")%>
    <%=f.text_field(:name)%> <br>
    <%=f.label("Show Description:")%>
    <%=f.text_field(:description)%> <br>
    <%=f.fields_for :reviews, @reviews do |r|%>
        <%=r.label "Rating:"%>
        <%=r.number_field :rating%> <br>
        <%=r.label "Location:"%>
        <%=r.text_field :location%> <br>
        <%=r.label "Comment:"%>
        <%=r.text_area :comment%>
    <%end%> 
    <%=f.submit "Submit"%>
<%end%>












